#! /bin/sh

function pdftojpg {
    if [ -d $1 ]
    then
        echo $1
        for file in $(ls $1)
        do
            if [[ $file =~ .*\.pdf ]]
            then
                dir=$1/${file%.pdf}
                if [ -e $dir ]
                then
                    echo "$dir exists"
                else
                    echo "mkdir $dir"
                    mkdir $dir
                    echo convert -verbose -density 150 -trim $1/$file -quality 100 -sharpen 0x1.0 $dir/img-%03d.jpg
                    convert -verbose -density 150 -trim $1/$file -quality 100 -sharpen 0x1.0 $dir/img-%03d.jpg
                fi
            fi
        done
    elif [[ $1 =~ .*\.pdf ]]
    then
        file=$1
        dir=${file%.pdf}
        if [ -e $dir ]
        then
            echo "$dir exists"
        else
            echo "mkdir $dir"
            mkdir $dir
            echo convert -verbose -density 150 -trim $file -quality 100 -sharpen 0x1.0 $dir/img-%02d.jpg
            convert -verbose -density 150 -trim $file -quality 100 -sharpen 0x1.0 $dir/img-%02d.jpg
        fi
    fi
}

pdftojpg $1
